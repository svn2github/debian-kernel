--- linux-2.6.10/arch/mips/kernel/signal-common.h	1970-01-01 01:00:00.000000000 +0100
+++ linux-2.6.10-mips/arch/mips/kernel/signal-common.h	2005-01-09 13:23:55.000000000 +0100
@@ -0,0 +1,135 @@
