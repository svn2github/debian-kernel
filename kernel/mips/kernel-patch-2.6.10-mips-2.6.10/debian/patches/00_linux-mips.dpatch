+static void __devexit serial_txx9_remove_one(struct pci_dev *dev)
+{
+	int i;
+	for (i = 0; i < NR_PORTS; i++) {
+		if (rs_ports[i].pci_dev == dev) {
+			rs_ports[i].irq = 0;
+			rs_ports[i].base = 0;
+			rs_ports[i].pci_dev = 0;
+			/* XXX NOT IMPLEMENTED YET */
+			break;
+		}
+	}
+}
