#!/bin/sh

PREREQ="udev"

prereqs()
{
	echo "$PREREQ"
}

case $1 in
prereqs)
	prereqs
	exit 0
	;;
esac

. /usr/share/initramfs-tools/hook-functions

copy_exec /lib/udev/firmware.agent /lib/udev/

mkdir -p $DESTDIR/lib/firmware

for FILE in @files_real@
do
	if [ ! -e $DESTDIR/lib/firmware/"`basename $FILE`" ]
	then
		cp "$FILE" $DESTDIR/lib/firmware
	fi
done
