+/*
+ * Inode operation getxattr()
+ *
+ * dentry->d_inode->i_sem: don't care
+ * BKL: held
+ */
+ssize_t
+ext3_getxattr(struct dentry *dentry, const char *name,
+	      void *buffer, size_t size)
+{
+	struct ext3_xattr_handler *handler;
+	struct inode *inode = dentry->d_inode;
+
