+/*
+ * Inode operation removexattr()
+ *
+ * dentry->d_inode->i_sem: down
+ * BKL: held
+ */
+int
+ext3_removexattr(struct dentry *dentry, const char *name)
+{
+	struct ext3_xattr_handler *handler;
+	struct inode *inode = dentry->d_inode;
