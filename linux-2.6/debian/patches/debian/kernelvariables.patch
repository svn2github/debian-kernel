-endif
-ifeq ($(ARCH),x86_64)
-        SRCARCH := x86
-endif
-
-# Where to locate arch specific headers
-ifeq ($(ARCH),sparc64)
-       hdr-arch  := sparc
-else
-       hdr-arch  := $(SRCARCH)
